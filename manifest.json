{
    "name": "CustomCSS",
    "description": "Add custom CSS to email message",
    "version": "1",
    "applications": {
        "gecko": {
            "id": "CustomCSS@GrantEdwards.github.io",
            "strict_min_version": "91.0"
        }
    },
    "permissions": [
        "compose",
        "storage"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false,
        "browser_style": true
    },
    "manifest_version": 2
}
